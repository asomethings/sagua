{
	"prettier.enable": false,
	"[javascript]": {
		"editor.defaultFormatter": "rome.rome",
		"editor.formatOnSave": true,
		"editor.codeActionsOnSave": {
			"quickfix.rome": true,
			"source.organizeImports.rome": true
		}
	},
	"[typescript]": {
		"editor.defaultFormatter": "rome.rome",
		"editor.formatOnSave": true,
		"editor.codeActionsOnSave": {
			"quickfix.rome": true,
			"source.organizeImports.rome": true
		}
	},
	"[json]": {
		"editor.defaultFormatter": "rome.rome",
		"editor.codeActionsOnSave": {
			"editor.formatOnSave": true,
			"quickfix.rome": true
		}
	}
}
