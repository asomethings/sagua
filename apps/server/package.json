{
  "name": "@sagua/server",
  "type": "module",
  "scripts": {
    "format": "prettier -w --plugin-search-dir=. src",
    "test": "jest --passWithNoTests",
    "clean": "del-cli ./dist",
    "build": "swc ./src -d ./dist -q",
    "watch": "chokidar \"./src/**/*\" -c \"pnpm build && node ./dist/index.js\" --silent --initial",
    "start:prod": "node ./dist/index.js"
  },
  "dependencies": {
    "@sagua/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
    "@jest/globals": "^29.5.0"
  }
}