{
  "name": "@sagua/worker",
  "type": "module",
  "scripts": {
    "format": "rome format . --write ",
    "test": "jest --passWithNoTests",
    "clean": "del-cli ./dist",
    "build": "swc ./src -d ./dist -q",
    "watch:ts": "swc ./src -d ./dist -q -w",
    "watch": "pnpm --silent run build && concurrently -k -p \"[{name}]\" -n \"swc,app\" -c \"yellow.bold,cyan.bold\" \"npm:watch:ts\" \"npm:start:dev\"",
    "start": "node ./dist/index.js",
    "start:dev": "chokidar \"./dist/**/*\" -c \"node ./dist/index.js\" --silent --initial"
  },
  "dependencies": {
    "@sagua/core": "workspace:*"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.2",
    "@types/node": "^20.5.0"
  }
}
