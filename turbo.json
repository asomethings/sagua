{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "format": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "watch": {
      "cache": false,
      "persistent": true
    },
    "start:prod": {
      "persistent": true
    }
  }
}